<h1>Binary Puzzle</h1>

<div class="controls">
    <div class="difficulty-selector">
        <label for="difficulty">Difficulty:</label>
        <select id="difficulty">
            <option value="easy">Easy</option>
            <option value="medium" selected>Medium</option>
            <option value="hard">Hard</option>
        </select>
    </div>
    <button id="newGameBtn">New Game</button>
    <button id="checkBtn">Check Solution</button>
    <button id="showSolutionBtn">Show Solution</button>
</div>

<div class="puzzle-info">
    <span id="puzzleNumber"></span>
    <span id="uniqueStatus"></span>
</div>

<div class="grid-container">
    <div class="grid-wrapper">
        <h3>Your Progress</h3>
        <div id="grid" class="grid"></div>
    </div>
    <div class="grid-wrapper" id="solutionWrapper" style="display: none;">
        <h3>Solution</h3>
        <div id="solutionGrid" class="grid solution-grid"></div>
    </div>
</div>

<div id="message" class="message" style="display: none;"></div>

<script>
    // Set grid size based on the actual puzzle data
    function updateGridSize(gridData) {
        const size = gridData.grid.length;
        document.documentElement.style.setProperty('--grid-size', size);
    }
    
    // Call this when you receive/update the puzzle data
    document.addEventListener('DOMContentLoaded', function() {
        // If you have access to the initial puzzle data, call:
        // updateGridSize(puzzleData);
    });
</script> 